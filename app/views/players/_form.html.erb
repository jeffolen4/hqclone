<%= form_with(model: player) do |form| %>
  <% if player.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(player.errors.count, "error") %> prohibited this player from being saved:</h2>

      <ul>
        <% player.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :player_email, "Player email" %>
    <%= form.text_field :player_email, { class: "form-control", placeholder: "jdoe@email.fake" } %>
  </div>

  <div class="form-group">
    <%= form.label :player_game_name, "Player name (in-game)" %>
    <%= form.text_field :player_game_name, { class: "form-control", placeholder: "leave blank to auto-generate" } %>
  </div>

  <div class="form-group">
    <%= form.label :password, "Password" %>
    <%= form.password_field :password, { class: "form-control password" } %>
  </div>

  <div class="form-group">
    <%= form.label :password_confirmation, "Confirm Password" %>
    <%= form.password_field :password_confirmation, { class: "form-control password" } %>
  </div>

  <div class="actions">
  <%= form.submit "Create Account", class: "btn btn-primary" %>
  </div>
<% end %>
