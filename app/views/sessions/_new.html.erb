<%= form_with(scope: player, url: sessions_path) do |form| %>
  <% if player.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(player.errors.count, "error") %> prohibited this player from being saved:</h2>

      <ul>
        <% player.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :player_email, "Player email" %>
    <%= form.text_field :player_email, { class: "form-control", placeholder: "jdoe@email.fake" } %>
  </div>

  <div class="form-group">
    <%= form.label :password, "Password" %>
    <%= form.password_field :password, { class: "form-control password" } %>
  </div>

  <div class="actions">
    <%= form.submit "Sign-in", class: "btn btn-primary" %><%= link_to "Sign up", new_player_path, class: "link-secondary pad-left" %>
  </div>

<% end %>
